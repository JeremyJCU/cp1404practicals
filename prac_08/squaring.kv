BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .5
        TextInput:
            id: input_number
            text: '7'
            font_size: 68
    #        multiline: False
        Button:
            text: 'Square'
            font_size: 62
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            font_size: 68
            color: (1, 0.4, 0.7, 1)
    Label:
        font_size: 38
        size_hint_y: .5
        background_color: ("red")
        text: 'Enter a number and press "Square"'
